        Title="User Action Required!" Height="242" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False">
    <Window.Background>
        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
            <GradientStop Color="#FFC7D0DD" Offset="0" />
            <GradientStop Color="#FF6587AF" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label Content="Please select the number of failures" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
        <Button Content="OK" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="button1" VerticalAlignment="Bottom" Width="108" Click="BtnOkClick" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,0,126,12" Name="button2" VerticalAlignment="Bottom" Width="108" Click="BtnCancelalick" />
        <TextBox Height="30" Margin="55,46,29,0" Name="textBox1" VerticalAlignment="Top" Text="32" VerticalContentAlignment="Center" />
